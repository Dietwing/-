@startuml
skinparam rectangle {
    backgroundColor #FFFFFF
    borderColor #000000
    shadowing false
    roundCorner 10
}
skinparam package {
    backgroundColor #E6F3FF
    borderColor #0066CC
    fontStyle bold
}
title Постановление Правительства РФ №676\nТребования к государственным информационным системам

package "Правовая основа" as legal {
    rectangle "ФЗ «Об информации,\nинформационных технологиях\nи о защите информации»" as law
    rectangle "Статья 14, часть 6\n(правовые основания)" as article
    law -- article
}

package "Замысел постановления" as intent {
    rectangle "Единые рамки жизненного цикла ГИС" as goal1
    rectangle "Стандартизация процессов и документации" as goal2
    rectangle "Надёжная защита информации и ПДн" as goal3
    rectangle "Согласованное межведомственное\nвзаимодействие" as goal4
    rectangle "Рациональные бюджетные траты" as goal5
}

package "Сфера применения" as scope {
    rectangle "Федеральные органы власти" as org1
    rectangle "Гос. внебюджетные фонды" as org2
    rectangle "Региональные и муниципальные органы" as org3
}

package "Жизненный цикл ГИС" as lifecycle {
    package "Создание" as creation {
        rectangle "Концептуальная записка" as concept
        rectangle "Технико-экономическое\nобоснование (ТЭО)" as teo
        rectangle "Техническое задание" as tz
        rectangle "Проработка архитектуры" as design
        rectangle "Разработка/адаптация ПО" as development
    }
    package "Ввод в эксплуатацию" as deployment {
        rectangle "Пусконаладочные работы" as setup
        rectangle "Предварительные испытания" as pretest
        rectangle "Опытная эксплуатация" as testing
        rectangle "Приёмочные испытания" as acceptance
        rectangle "Правовой акт о вводе" as act
    }
    package "Эксплуатация" as operation {
        rectangle "Техническая поддержка" as maintenance
        rectangle "Мониторинг показателей\nи качества услуг" as monitoring
        rectangle "Плановое развитие\nи доработки" as evolution
    }
    package "Вывод из эксплуатации" as decommission {
        rectangle "Основания:\nэкономическая неэффективность,\nнецелесообразность, устаревание" as reasons
        rectangle "Сохранение/миграция\nданных и архив" as datastorage
    }
}

package "Требования" as requirements {
    rectangle "Полный комплект\nдокументов на этапах" as docs
    rectangle "Сертифицированные СЗИ,\nрежим доступа, аудит" as security
    rectangle "Интероперабельность:\nЕСИА, СМЭВ, единые API" as integration
    rectangle "Сроки, роли, ответственность,\nметрики эффективности" as planning
    rectangle "Юридическая фиксация решений\n(правовые акты)" as legalacts
}

package "Международные параллели" as international {
    rectangle "FEAF (США)\nАрхитектурный каркас" as feaf
    rectangle "GDS (Великобритания)\nСтандарты цифровых услуг" as gds
    rectangle "EIF (ЕС)\nИнтероперабельность" as eif
}

' Связи
legal --> intent
legal --> scope
legal --> lifecycle
intent --> requirements
scope --> requirements
creation --> deployment
deployment --> operation
operation --> decommission
requirements --> creation
requirements --> deployment
requirements --> operation
requirements --> decommission

' Международные сопоставления (ассоциации)
feaf --> design : общие подходы
gds --> monitoring : ориентир на качество услуг
eif --> integration : совместимость и обмен

note right of lifecycle
<b>Ключевые акценты:</b>
• Сквозной жизненный цикл
• Поэтапная документация и контроль
• Защита информации и ПДн
• Совместимость и обмен данными
• Юридическая ответственность
end note

note left of international
<b>Сопоставимость с практиками:</b>
Российский порядок согласуется
с FEAF/GDS/EIF на уровне принципов,
отличаясь регуляторной детализацией.
end note
@enduml
